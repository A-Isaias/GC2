<!-- adminComic.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administrar Comics</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <!-- Menú -->
    <nav class="navbar navbar-expand-lg navbar-light bg-info mb-3">
        <a class="navbar-brand btn btn-outline-secondary text-white" href="/">Menú Principal</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link btn btn-primary text-white" href="/add-comic">Agregar Comic</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-danger text-white" href="/logout">Cerrar Sesión</a>
                </li>
            </ul>
        </div>
    </nav>
<div class="container mt-5">
    <!-- Formulario de búsqueda -->
<form action="/admin-comics" method="post">
    <!-- Otros campos de búsqueda -->
    <div class="form-group">
        <label for="criterio">Buscar por:</label>
        <select class="form-control" id="criterio" name="criterio">
            <option value="nombre" selected>Nombre</option>
            <option value="numero">Número</option>
            <option value="editorial">Editorial</option>
            <option value="coleccion">Colección</option>
            <option value="fecha_ingreso">Fecha de Ingreso</option>
            <option value="observaciones">Observaciones</option>
        </select>
    </div>
    <div class="col-md-6">
        <label for="keyword">Palabra clave:</label>
        <input type="text" class="form-control" id="keyword" name="valor" required>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a href="/admin-comics" class="btn btn-secondary">Mostrar Todos</a>
    </div>
</form>

    <!-- Tabla de comics -->
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Portada</th>
                <th>Nombre</th>
                <th>Número</th>
                <th>Editorial</th>
                <th>Colección</th>
                <th>Fecha Ingreso</th>
                <th>Novedad</th>
                <th>Costo</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% comics.forEach(comic => { %>
                <tr>
                    <td><%= comic.id %></td>
                    <td><img src="/uploads/<%= comic.portada %>" alt="Portada del Cómic" style="max-width: 80px;"></td>
                    <td><%= comic.nombre %></td>
                    <td><%= comic.numero %></td>
                    <td><%= comic.editorial %></td>
                    <td><%= comic.coleccion %></td>
                    <td><%= comic.fecha_ingreso %></td>
                    <td><%= comic.novedad %></td>
                    <td><%= comic.costo %></td>
                    <td><%= comic.observaciones %></td>
                    <td>
                        <a href="/edit-comic/<%= comic.id %>" class="btn btn-warning">Editar</a>
                        <form action="/delete-comic/<%= comic.id %>" method="post" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este cómic?');">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                        
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

</body>
</html>