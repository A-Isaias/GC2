                        <input
                            type="date"
                            class="form-control"
                            id="fechaNacimiento"
                            name="fechaNacimiento"
                            required
                        />
                    </div>
                    <div class="form-group">
                        <label for="telefono">Teléfono</label>
                        <input
                            type="tel"
                            class="form-control"
                            id="telefono"
                            name="telefono"
                            required
                        />
                    </div>
                    <div class="form-group">
